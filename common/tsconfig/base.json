{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "target": "ES2021",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/dist/**"]
}
